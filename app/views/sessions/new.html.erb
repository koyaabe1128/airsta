<div class ="container">
  <div class ="row">
    <div class="card mt-5 mx-auto" style="width: 25rem;">
      <div class="card-body">
    
        <div class="row">
          <h5 class ="mx-auto my-3 font-weight-bold">ログイン</h5>
        </div>
      
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          
          <div class="form-group">
            <div class ="col-10 offset-1">
              <%= f.label :email, 'メールアドレス' %>
            </div>
            <div class ="col-10 mx-auto">
              <%= f.email_field :email, :placeholder => "info@sample.com", class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class ="col-10 offset-1">
              <%= f.label :password, 'パスワード' %>
            </div>
            <div class ="col-10 mx-auto">
              <%= f.password_field :password, :placeholder => "パスワード", class: "form-control" %>
            </div>
          </div>
          
          <div class="row">
            <div class="form-group mx-auto mt-3">        
              <%= f.submit "ログイン", class: 'btn btn-info btn-sm' %>
            </div>
          </div>
          
        <% end %>
  
      </div>
    </div>
  </div>
</div>  
