<div class ="row mt-4">
  <div class ="col-xl-6 mt-4">
    <div class ="row">
      <div class ="mx-auto">
        <% if @user.image? %>
          <%= image_tag @user.image.url, class: "img-responsive center-block icon" %>
        <% end %>
      </div>
    </div>
    <div class ="row">
      <div class ="mx-auto mt-4">
        <% if current_user == @user %>
          <%= link_to edit_user_path, class: "no-underline" do %>
            <div class="border my-btn"><i class="fas fa-edit mr-1"></i>プロフィールを編集</div>
          <% end %>
        <% else %>
          <div id="follow_btn_<%= @user.id %>">
            <%= render "relationships/follow", user: @user %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class ="col-xl-6 mt-5">
    
    <div class ="row">
      <h1 class ="font-weight-bold mb-4 ml-2"><%= @user.name %></h1>
    </div>
    
    <div class ="row">
      <% if @user.genre.present? %>
        <div class ="col-5 col-md-3 font-weight-bold">ジャンル</div>
        <div class ="col-7 col-md-7"><%= @user.genre %></div>
      <% end %>
    </div>
    
    <div class ="row mt-3">
      <% if @user.place.present? %>
        <div class ="col-5 col-md-3 font-weight-bold">主な活動場所</div>
        <div class ="col-7 col-md-7"><%= @user.place %></div>
      <% end %>
    </div>
    
    <div class ="row mt-4">
      <% if @user.introduction.present? %>
        <div class ="col-xl-10"><%= @user.introduction %></div>
      <% end %>
    </div>
    
  </div>
</div>

<div class ="row justify-content-center mt-5">
  <div class ="col-3">
    <div class ="row">
      <h5 class ="mx-auto"><%= link_to "イベント", user_path(@user), class: "font-weight-bold text-secondary no-underline" %></h5>
    </div>
  </div>
  <div class ="col-3">
    <div class ="row">
      <h5 class ="mx-auto"><%= link_to "フォロー", followings_user_path(@user), class: "text-secondary no-underline" %></h5>
    </div>
  </div>
  <div class ="col-3">
    <div class ="row">
      <h5 class ="mx-auto"><%= link_to "いいね", likes_user_path(@user), class: "text-secondary no-underline" %></h5>
    </div>
  </div>
</div>
<hr>

<% @user.events.each do |event| %>
  <div class ="row">
    <div class ="col-md-8 mx-auto my-4">
      <div class ="row">
        <div class ="col-lg-5 mb-4">
          <div class ="row">
            <div class ="ml-3">
              <i class="far fa-user-circle fa-2x"></i>
            </div>
            <div class ="ml-3 pt-1">
              <%= link_to user_path(@user), class:"font-weight-bold font-black no-underline" do %>
                <h5><%= @user.name %></h5>
              <% end %>
            </div>
          </div>
          <div class ="row">
            <div class ="mx-auto">
              <%= image_tag event.image.url, class: "img-responsive center-block border events-img-index" %>
            </div>
          </div>
        </div>
        <div class ="col-lg-7 mt-4">
          <div class ="row mb-3">
            <%= link_to event_path(event), class: "font-black font-weight-bold no-underline" do %>
              <h4 class ="ml-5"><%= event.title %></h4>
            <% end %>
          </div>
          <div class ="row">
            <div class ="ml-5 font-weight-bold">日時</div>
            <div class ="ml-2"><%= event.event_at %></div>
          </div>
          <div class ="row">
            <div class ="ml-5 font-weight-bold">場所</div>
            <div class ="ml-2"><%= event.place %></div>
          </div>
          <div class ="row">
            <div class ="ml-5 font-weight-bold">料金</div>
            <div class ="ml-2"><%= event.price %>円</div> 
          </div>
          <div class ="row">
            <div class ="ml-5 font-weight-bold">ジャンル</div>
            <div class ="ml-2"><%= event.genre %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>